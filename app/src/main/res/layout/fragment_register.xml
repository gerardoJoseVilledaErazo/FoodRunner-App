<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".fragment.RegisterFragment">

    <RelativeLayout
        android:id="@+id/registerProgressdialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:elevation="1dp"
        android:visibility="invisible">

        <ProgressBar
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorper">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/eating"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/register_yourself"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_border_for_view"
                android:drawableStart="@drawable/ic_icon_person_filled"
                android:drawablePadding="4dp"
                android:hint="@string/name_min_3_characters"
                android:inputType="text"
                android:maxLength="20"
                android:padding="10dp"
                android:textSize="18sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_border_for_view"
                android:drawableStart="@drawable/ic_icon_email"
                android:drawablePadding="4dp"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:maxLength="40"
                android:padding="10dp"
                android:textSize="18sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/etMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_border_for_view"
                android:drawableStart="@drawable/ic_icon_mobile"
                android:drawablePadding="4dp"
                android:hint="@string/mobile_number_10_digits"
                android:inputType="number"
                android:maxLength="10"
                android:padding="10dp"
                android:textSize="18sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/etDeliveryAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_border_for_view"
                android:drawableStart="@drawable/ic_icon_location"
                android:drawablePadding="4dp"
                android:hint="@string/delivery_address"
                android:inputType="text"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="18sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_border_for_view"
                android:drawableStart="@drawable/ic_icon_password"
                android:drawablePadding="4dp"
                android:hint="@string/password_min_4_digits"
                android:inputType="numberPassword"
                android:maxLength="8"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="18sp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_border_for_view"
                android:drawableStart="@drawable/ic_icon_password"
                android:drawablePadding="4dp"
                android:hint="@string/confirm_password"
                android:inputType="numberPassword"
                android:maxLength="8"
                android:padding="10dp"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_view_for_menu_red"
                android:text="@string/register"
                android:textColor="#fff"
                android:textSize="20sp"
                tools:ignore="UnusedAttribute" />

        </LinearLayout>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>